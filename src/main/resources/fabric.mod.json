{
  "schemaVersion": 1,
  "id": "ht_materials",
  "version": "${version}",
  "name": "HT Materials",
  "description": "Add material system, Unify Forge Tag and Common Tag",
  "authors": [
    "Hiiragi283"
  ],
  "contact": {
    "issues": "https://github.com/Hiiragi283/HT-Materials/issues",
    "sources": "https://github.com/Hiiragi283/HT-Materials"
  },
  "license": "MPL-2.0",
  "icon": "assets/ht_materials/textures/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "io.github.hiiragi283.material.common.HTMaterialsCommon"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "io.github.hiiragi283.material.client.HTMaterialsClient"
      }
    ],
    "ht_materials": [
      {
        "adapter": "kotlin",
        "value": "io.github.hiiragi283.material.addon.HTCreateAddon"
      },
      {
        "adapter": "kotlin",
        "value": "io.github.hiiragi283.material.addon.HTMIAddon"
      }
    ],
    "rei_client": [
      {
        "adapter": "kotlin",
        "value": "io.github.hiiragi283.material.compat.rei.HTReiPlugin"
      }
    ]
  },
  "mixins": [
    "ht_materials.mixins.json"
  ],
  "depends": {
    "brrp_v1": ">=${brrp_version}",
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}",
    "fabric-language-kotlin": "*"
  }
}